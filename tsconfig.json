{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": false,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "module": "CommonJS",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "es2022"
        ]
    },
    "include": [
        "src"
    ]
}