{
  "name": "examples-aws-lambda",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/examples/aws-lambda/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/examples/aws-lambda",
        "main": "packages/examples/aws-lambda/src/index.ts",
        "tsConfig": "packages/examples/aws-lambda/tsconfig.lib.json",
        "assets": [
          "packages/examples/aws-lambda/*.md"
        ]
      },
      "dependsOn": [
        "build-prisma-client",
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "build-prisma-client": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma generate --schema=packages/examples/aws-lambda/src/lib/handlers/prisma/schema.prisma"
        ]
      }
    },
    "build-prisma-migrations": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo this currently does not work when run from NX. See https://github.com/prisma/prisma/issues/4669. Please run from your command line.",
          "npx prisma migrate dev --schema=packages/examples/aws-lambda/src/lib/handlers/prisma/schema.prisma"
        ]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/examples/aws-lambda",
        "commands": [
          {
            "command": "npx aws-cdk deploy --all --require-approval never",
            "forwardAllArgs": true
          }
        ],
        "parallel": false
      },
      "dependsOn": [
        "build"
      ]
    },
    "deploy-lambdas": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/examples/aws-lambda",
        "commands": [
          {
            "command": "npx aws-cdk deploy PrismaDataAPIlambdas --force",
            "forwardAllArgs": true
          }
        ],
        "parallel": false
      },
      "dependsOn": [
        "build"
      ]
    },
    "destroy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/examples/aws-lambda",
        "commands": [
          {
            "command": "npx aws-cdk destroy prisma-rds-data-api* --force",
            "forwardAllArgs": true
          }
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "bootstrap": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/examples/aws-lambda",
        "commands": [
          {
            "command": "source ./source.sh",
            "forwardAllArgs": false
          },
          {
            "command": "npx aws-cdk bootstrap",
            "forwardAllArgs": true
          }
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    }
  },
  "implicitDependencies": [
    "aurora-prisma-adapter"
  ]
}